<!--pages/list/list.wxml-->
<scroll-view scroll-y='true'>
  <view class='board'>
    <image src='{{board}}' />
  </view>
  <view class='songlist'>
    <block wx:for='{{songlist}}' >
      <view class='songitem'>
        <navigator url='/pages/play/play?songid={{item.songid}}' class='song-play'>
          <image src='/images/play.png' />
        </navigator>
        <navigator url='/pages/play/play?songid={{item.songid}}' class='song-detail'>
          <view class='song-title'>{{item.songname}}</view>
          <view class='song-subtitle'>{{item.singername}} - {{item.seconds}}</view>
        </navigator>
      </view>
    </block>
  </view>
  <loading hidden='{{!loading}}'>
    正在加载音乐......
  </loading>
</scroll-view>
